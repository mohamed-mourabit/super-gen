{
  "compileOnSave": false,
  "compilerOptions": {
    "checkJs": false,
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "files": [
    "server.ts"
  ],
  "include": ["api/**/*.ts"],
  "exclude": [
    "node_modules", 
    "api/base", 
    "angular", 
    "dist", 
    "api/public", 
    "api/service/class-reader.js"
  ]
  
}